          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/WcfServiceLib/SellerService/" />
          </baseAddresses>
        </host>
      </service>
      <service name="WcfServiceLib.UserService">
        <endpoint address="" binding="basicHttpBinding" contract="WcfServiceLib.IUserService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/WcfServiceLib/UserService/" />
          </baseAddresses>
        </host>
      </service>
      <service name="WcfServiceLib.AppointmentService">
        <endpoint address="" binding="basicHttpBinding" contract="WcfServiceLib.IAppointmentService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8733/Design_Time_Addresses/WcfServiceLib/AppointmentService/" />
